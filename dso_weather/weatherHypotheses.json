{
  "metadata": {
    "title": "DSO Weather Hypothesis Framework",
    "version": "1.0.0",
    "created": "2026-01-09",
    "author": "Joe Garrett",
    "theory": "Drag-Scale-Object (DSO) E-Field Weather Model",
    "description": "Weather phenomena as E-field discharge events governed by fuel, gradient, catalyst, and solar angle"
  },
  "coreEquations": {
    "probability": {
      "formula": "P = E_fuel × |dθ/dt| × sin(α)",
      "description": "Storm probability based on energy availability",
      "variables": {
        "E_fuel": "Energy storage (Gulf SST, atmospheric moisture)",
        "dθ_dt": "Rate of Earth tilt change (catalyst)",
        "α": "Solar incidence angle at latitude"
      }
    },
    "volatility": {
      "formula": "V = (∂E_fuel/∂φ) × |dθ/dt| × sin(α)",
      "description": "Storm violence based on energy gradient",
      "variables": {
        "∂E_fuel/∂φ": "Spatial gradient of energy (air mass collision)",
        "dθ_dt": "Rate of Earth tilt change (catalyst)",
        "α": "Solar incidence angle at latitude"
      }
    },
    "danger": {
      "formula": "D = P × V = E_fuel × (∂E_fuel/∂φ) × (dθ/dt)² × sin²(α)",
      "description": "Combined danger index"
    },
    "climate_adjusted": {
      "formula": "D(T) = D₀ × (1 + β₁·ΔT_Gulf) / (1 + β₂·ΔT_Arctic)",
      "description": "Climate-adjusted danger with warming coefficients",
      "coefficients": {
        "β₁": 1.0,
        "β₂": 0.3
      }
    }
  },
  "stormTypeEquations": {
    "thunderstorm": {
      "formula": "P = E_fuel × sin(α)",
      "drivers": ["fuel", "solar"],
      "gradient_required": false,
      "catalyst_required": false
    },
    "severe_thunderstorm": {
      "formula": "P = E_fuel × (∂E/∂φ) × sin(α)",
      "drivers": ["fuel", "gradient", "solar"],
      "gradient_required": true,
      "catalyst_required": false
    },
    "supercell": {
      "formula": "P = E_fuel × (∂E/∂φ) × |dθ/dt| × sin(α)",
      "drivers": ["fuel", "gradient", "catalyst", "solar"],
      "gradient_required": true,
      "catalyst_required": true
    },
    "tornado": {
      "formula": "V = (∂E/∂φ) × |dθ/dt| × sin(α)",
      "drivers": ["gradient", "catalyst", "solar"],
      "gradient_required": true,
      "catalyst_required": true,
      "notes": "Volatility equation - requires BOTH gradient and catalyst high"
    },
    "derecho": {
      "formula": "P = E_fuel² × τ",
      "drivers": ["fuel", "duration"],
      "gradient_required": false,
      "catalyst_required": false,
      "notes": "Linear discharge when gradient low but fuel extreme"
    },
    "hurricane": {
      "formula": "P = E_fuel³ × τ² × f(latitude)",
      "drivers": ["fuel", "duration", "latitude"],
      "gradient_required": false,
      "catalyst_required": false,
      "notes": "Sustained oceanic fuel, requires days to organize"
    },
    "blizzard": {
      "formula": "P = (∂E/∂φ) × |dθ/dt| × (1 - sin(α))",
      "drivers": ["gradient", "catalyst", "inverse_solar"],
      "gradient_required": true,
      "catalyst_required": true,
      "notes": "Cold-side gradient dominance"
    },
    "ice_storm": {
      "formula": "P = (∂E/∂φ) × T_boundary",
      "drivers": ["gradient", "temperature_boundary"],
      "gradient_required": true,
      "catalyst_required": false
    },
    "flash_flood": {
      "formula": "P = E_fuel × τ × (1/terrain_drainage)",
      "drivers": ["fuel", "duration", "terrain"],
      "gradient_required": false,
      "catalyst_required": false
    }
  },
  "hypotheses": [
    {
      "id": "DSO-W-001",
      "name": "Tornado Clustering Hypothesis",
      "statement": "Tornado days decrease while tornadoes per outbreak increase due to gradient concentration from differential warming",
      "predictions": [
        {
          "metric": "tornado_days_per_year",
          "baseline_period": "1970-1980",
          "baseline_value": 150,
          "predicted_trend": "decreasing",
          "predicted_value_2020": 100,
          "mechanism": "Polar amplification reduces overall gradient availability"
        },
        {
          "metric": "tornadoes_per_outbreak",
          "baseline_period": "1950-1960",
          "baseline_value": 10,
          "predicted_trend": "increasing",
          "predicted_value_2020": 15,
          "mechanism": "When gradient events occur, more fuel available for discharge"
        }
      ],
      "validation_status": "confirmed",
      "data_sources": ["NOAA SPC", "Brooks et al. 2014", "Tippett et al. 2016"]
    },
